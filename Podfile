# Pods
def pods
  pod 'boost', :git => 'https://github.com/PopcornTimeTV/Boost.git'
  pod 'boostfilesystem', :git => 'https://github.com/PopcornTimeTV/Boost-Filesystem.git'
  pod 'libtorrent', :git => 'https://github.com/PopcornTimeTV/libtorrent.git'
end

# Targets
target 'PopcornTorrent' do
  pods
end

target 'PopcornTorrentTests' do
  pods
end
